<a
	href={{href}}
	class='flex items-center p-3 text-base font-bold text-blue-700 border-solid border border-blue-700 rounded-lg hover:bg-slate-800/50 group hover:shadow'
>
	{{#if svg}}
		{{{svg}}}
		<span class='flex-1 whitespace-nowrap ml-3'>{{title}}</span>
	{{else}}
		<span class='flex-1 whitespace-nowrap'>{{title}}</span>
	{{/if}}
</a>