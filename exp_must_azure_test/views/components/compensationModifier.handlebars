{{! COMPENSATION MODIFIER }}
<div
	id='modifier-compensation'
	class='self-center z-10 absolute rounded bg-slate-700 p-6 drop-shadow-lg flex flex-col items-center justify-center'
>
	<div class='relative mb-6'>
		<div
			class='flex absolute inset-y-0 left-0 pl-3 items-center pointer-events-none'
		>
			<svg
				xmlns='http://www.w3.org/2000/svg'
				class='w-5 h-5 text-gray-500 dark:text-gray-400'
				viewBox='0 0 20 20'
				fill='currentColor'
			>
				<path
					d='M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z'
				></path>
				<path
					fill-rule='evenodd'
					d='M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z'
					clip-rule='evenodd'
				></path>
			</svg>
		</div>
		<form
			action={{updateLink}}
			method='post'
			id='form-update-compensation'
			class='h-fit m-0'
		>
			<input
				type='text'
				id='input_update_compensation'
				name='input_update_compensation'
				class='border text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pl-10 p-2.5 bg-gray-700 border-gray-600 text-white'
				placeholder='name@flowbite.com'
			/>
		</form>

	</div>
	<div class='grow flex justify-center gap-2'>
		<a
			class='update-button flex items-center p-2 text-base font-bold text-white bg-lime-700 rounded-lg hover:bg-lime-600 group hover:shadow hover:cursor-pointer'
		>
			<span class='flex-1 whitespace-nowrap'>Modifier</span>
		</a>
		<a
			class='cancel-button flex items-center p-2 text-base font-bold text-white bg-red-700 rounded-lg hover:bg-red-600 group hover:shadow hover:cursor-pointer'
		>
			<span class='flex-1 whitespace-nowrap'>Annuler</span>
		</a>
	</div>
</div>