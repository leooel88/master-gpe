<div class='relative top-6 flex justify-center'>
	<div
		class='grow p-4 max-w-3xl bg-slate-800 rounded-lg border shadow-md sm:p-6'
	>
		<div class='flex flex-col justify-center items-center'>
			<h5
				class='mb-3 text-base font-semibold text-gray-900 lg:text-xl dark:text-white'
			>
				Liste des candidats
			</h5>
			<div class='flex flex-row'>
				<p class='ml-5'>En attente de validation</p>
				<div class='ml-3 flex-shrink-0'>
					<svg
						xmlns='http://www.w3.org/2000/svg'
						class='h-5 w-5 fill-grey-500'
						viewBox='0 0 20 20'
						fill='currentColor'
					>
						<path
							fill-rule='evenodd'
							d='M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z'
							clip-rule='evenodd'
						></path>
					</svg>
				</div>
				<p class='ml-5'>Validé</p>
				<div class='ml-3 flex-shrink-0'>
					<svg
						xmlns='http://www.w3.org/2000/svg'
						class='w-5 h-5 fill-lime-500'
						viewBox='0 0 20 20'
						fill='currentColor'
					>
						<path
							fill-rule='evenodd'
							d='M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z'
							clip-rule='evenodd'
						></path>
					</svg>
				</div>
				<p class='ml-5'>Refusé</p>
				<div class='ml-3 flex-shrink-0'>
					<svg
						xmlns='http://www.w3.org/2000/svg'
						class='h-5 w-5 fill-red-500'
						viewBox='0 0 20 20'
						fill='currentColor'
					>
						<path
							fill-rule='evenodd'
							d='M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z'
							clip-rule='evenodd'
						></path>
					</svg>
				</div>
			</div>
		</div>

		<ul class='my-4 space-y-3'>
			{{#each candidatureList}}
				<li>
					<a
						href={{this.readLink}}
						class='flex items-center p-3 text-base font-bold text-gray-900 bg-gray-50 rounded-lg hover:bg-gray-100 group hover:shadow dark:bg-gray-600 dark:hover:bg-gray-500 dark:text-white'
					>
						{{#if this.even}}
							<svg
								xmlns='http://www.w3.org/2000/svg'
								class='h-5 w-5'
								viewBox='0 0 20 20'
								fill='currentColor'
							>
								<path
									d='M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z'
								></path>
							</svg>
						{{else}}
							<svg
								xmlns='http://www.w3.org/2000/svg'
								class='h-5 w-5'
								fill='none'
								viewBox='0 0 24 24'
								stroke='currentColor'
								stroke-width='2'
							>
								<path d='M12 14l9-5-9-5-9 5 9 5z'></path>
								<path
									d='M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z'
								></path>
								<path
									stroke-linecap='round'
									stroke-linejoin='round'
									d='M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222'
								></path>
							</svg>
						{{/if}}
						<span
							class='ml-3 whitespace-nowrap'
						>{{this.prenom}}</span>
						<span class='ml-3 whitespace-nowrap'>{{this.nom}}</span>
					</a>
				</li>
			{{/each}}
		</ul>
	</div>
</div>