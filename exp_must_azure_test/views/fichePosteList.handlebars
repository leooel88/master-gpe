<div class='relative flex flex-col justify-center'>
	<div class="grow p-6 w-fit m-auto">
		<h1 class="text-5xl font-semibold">Liste des fiches de poste</h1>
	</div>
	<div
		class='grow p-4 max-w-3xl m-auto bg-slate-800 rounded-lg border shadow-md sm:p-6'
	>
		<ul class='my-4 space-y-3 max-w-3xl'>
			<div class="mb-6 w-fit m-auto">
				{{>button5 href='/ficheposte/create' title='Cr√©er une fiche de poste' svg='<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
					<path stroke-linecap="round" stroke-linejoin="round" d="M12 10.5v6m3-3H9m4.06-7.19l-2.12-2.12a1.5 1.5 0 00-1.061-.44H4.5A2.25 2.25 0 002.25 6v12a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9a2.25 2.25 0 00-2.25-2.25h-5.379a1.5 1.5 0 01-1.06-.44z" />
				</svg>'}}
			</div>
			{{#each fichePosteList}}
				<li>
					<a
						href={{this.readLink}}
						class='flex items-center p-3 text-base font-bold text-gray-900 bg-gray-50 rounded-lg hover:bg-gray-100 group hover:shadow dark:bg-gray-600 dark:hover:bg-gray-500 dark:text-white'
					>
						{{#if this.even}}
							<svg
								xmlns='http://www.w3.org/2000/svg'
								class='h-5 w-5'
								viewBox='0 0 20 20'
								fill='currentColor'
							>
								<path
									d='M9 2a1 1 0 000 2h2a1 1 0 100-2H9z'
								></path>
								<path
									fill-rule='evenodd'
									d='M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z'
									clip-rule='evenodd'
								></path>
							</svg>
						{{else}}
							<svg
								xmlns='http://www.w3.org/2000/svg'
								class='h-5 w-5'
								fill='none'
								viewBox='0 0 24 24'
								stroke='currentColor'
								stroke-width='2'
							>
								<path
									stroke-linecap='round'
									stroke-linejoin='round'
									d='M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01'
								></path>
							</svg>
						{{/if}}
						<span
							class='flex-1 ml-3 whitespace-nowrap'
						>{{this.label}}</span>
						{{#compare ../displayValidationIcons 1 operator='=='}}
							{{#compare this.urgency "NON-URGENT" operator='=='}}
								<span
									class='inline-flex items-center justify-center px-2 py-0.5 ml-3 text-xs font-medium text-gray-500 bg-gray-200 rounded'
								>{{this.urgency}}</span>
							{{/compare}}
							{{#compare this.urgency "PEU-URGENT" operator='=='}}
								<span
									class='inline-flex items-center justify-center px-2 py-0.5 ml-3 text-xs font-medium text-gray-500 bg-orange-200 rounded'
								>{{this.urgency}}</span>
							{{/compare}}
							{{#compare this.urgency "URGENT" operator='=='}}
								<span
									class='inline-flex items-center justify-center px-2 py-0.5 ml-3 text-xs font-medium text-white bg-orange-400 rounded'
								>{{this.urgency}}</span>
							{{/compare}}
							{{#compare this.urgency "TRES-URGENT" operator='=='}}
								<span
									class='inline-flex items-center justify-center px-2 py-0.5 ml-3 text-xs font-medium text-white bg-orange-900 rounded'
								>{{this.urgency}}</span>
							{{/compare}}
							<div
								class='ml-6 h-6 rounded-[3px] flex items-center gap-4'
							>

								{{#compare this.validationRH 0 operator='=='}}
									<div
										class='bg-slate-300 rounded p-2'
									>RH</div>
								{{else}}
									{{#compare this.validationRH 1 operator='=='}}
										<div
											class='bg-green-400 rounded p-2'
										>
											RH
										</div>
									{{else}}
										{{#compare this.validationRH 2 operator='=='}}
											<div
												class='bg-red-400 rounded p-2'
											>
												RH
											</div>
										{{/compare}}
									{{/compare}}
								{{/compare}}

								{{#compare this.validationFinance 0 operator='=='}}
									<div
										class='bg-slate-300 p-2 rounded'
									>
										FI
									</div>
								{{else}}
									{{#compare this.validationFinance 1 operator='=='}}
										<div
											class='bg-green-400 p-2 rounded'
										>
											FI
										</div>
									{{else}}
										{{#compare this.validationFinance 2 operator='=='}}
											<div
												class='bg-red-400 p-2 rounded'
											>
												FI
											</div>
										{{/compare}}
									{{/compare}}
								{{/compare}}

								{{#compare this.publicationRH 0 operator='=='}}
									<div
										class='bg-slate-300 p-2 rounded'
									>
										PU
									</div>
								{{else}}
									{{#compare this.publicationRH 1 operator='=='}}
										<div
											class='bg-green-400 p-2 rounded'
										>
											PU
										</div>
									{{else}}
									{{#compare this.publicationRH 2 operator='=='}}
										<div
											class='bg-red-400 p-2 rounded'
										>
											PU
										</div>
										{{/compare}}
									{{/compare}}
								{{/compare}}
							</div>
						{{/compare}}


						<span class=" text-sm text-white rounded-full bg-slate-600 flex items-center justify-center font-mono p-1 ml-3 w-6 h-6">{{this.nbCandidature}}</span>
						<span  class="flex items-center justify-center pl-3"> {{this.createdAt}}</span>
        			</a>
        		</li>
        	{{/each}}
    	</ul>
    	<a href="/dashboard/{{group}}">
    		<button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full">
  				Retour
			</button>
		</a>
    </div>
</div>
