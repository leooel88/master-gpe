{{#each files}}
	<a href='/documents/{{this.name}}'>
		{{this.name}}

	</a>
	<embed
		src='/documents/{{this.name}}'
		width='200'
		height='100'
		type='application/pdf'
	/>
	<form action='/listFile/delete' method='post'>
		<input
			type='hidden'
			name='filename'
			id='filename'
			value={{this.name}}
		/>
		<button
			type='submit'
			class='text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 focus:outline-none'
		>delete</button>

	</form>
	<br />
{{/each}}

<a href='/uploadFile'>upload un fichier </a>