<div class="flex flex-col m-10 mx-16 w-fit">
  {{#each events}}
    {{#if this.separator}}
      {{#if this.first}}
        <div class="flex flex-row">
          <div class="text-2xl leading-tight m-2">{{this.date}}</div>
          <div class="grow my-auto p-6">
            <hr>
          </div>
        </div>
        <div class="flex gap-4 w-fit flex-wrap">
      {{else}}
        </div>
        <div class="flex flex-row">
          <div class="text-2xl leading-tight m-2">{{this.date}}</div>
          <div class="grow my-auto p-6">
            <hr>
          </div>
        </div>
        <div class="flex gap-4 w-fit flex-wrap">
      {{/if}}
    {{else}}
      <div class="card shadow rounded m-2 bg-slate-800 overflow-hidden cursor-pointer hover:opacity-75">
