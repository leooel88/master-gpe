<div class="flex flex-col">
	<div class="p-6 w-fit m-auto">
		<h1 class="text-5xl font-semibold">Ressources d'entreprise</h1>
	</div>
	<div class='relative m-auto top-6 flex justify-center'>
		<div
			class='grow p-4 max-w-3xl bg-slate-800 rounded-lg border shadow-md sm:p-6 flex flex-col items-center'
		>
			<div class="mb-6">
				{{>linkButton5 href='/uploadFile' title='Ajouter une ressource' svg='<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
					<path stroke-linecap="round" stroke-linejoin="round" d="M12 10.5v6m3-3H9m4.06-7.19l-2.12-2.12a1.5 1.5 0 00-1.061-.44H4.5A2.25 2.25 0 002.25 6v12a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9a2.25 2.25 0 00-2.25-2.25h-5.379a1.5 1.5 0 01-1.06-.44z" />
				</svg>'}}
			</div>
			{{#each files}}
				<div class="w-full">
					<div class="w-fit m-auto">
						<a href='/servedFiles/adminFile/{{this.name}}'>
							<h1 class="text-xl font-semibold">{{this.name}}</h1>
						</a>
					</div>
					<iframe
						src='/servedFiles/adminFile/{{this.name}}'
						width='700'
						height='400'
						type='application/pdf'
						class='rounded-xl drop-shadow-lg m-auto mt-6'
					></iframe>
					<div class="w-fit m-auto mt-6 mb-20">
						{{>linkButton1 href='/listFile/delete' title='Supprimer' svg='<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
							<path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
						</svg>'}}
					</div>
				</div>
			{{/each}}
		</div>
	</div>
</div>