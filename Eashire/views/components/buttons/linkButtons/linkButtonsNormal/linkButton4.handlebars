<a
	href={{href}}
	class='flex items-center p-3 w-fit text-base font-bold text-indigo-900 border-solid border border-indigo-700 rounded-lg hover:bg-slate-800/50 group hover:shadow'
>
	{{#if svg}}
		{{#if svg_class}}
			{{> (lookup . 'svg') class=svg_class}}
		{{else}}
			{{> (lookup . 'svg')}}
		{{/if}}
		<span class='flex-1 whitespace-nowrap ml-3'>{{title}}</span>
	{{else}}
		<span class='flex-1 whitespace-nowrap'>{{title}}</span>
	{{/if}}
</a>